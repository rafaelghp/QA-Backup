import java.util.Arrays;
import java.util.Collection;

import org.junit.After;
import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Parameterized;
import org.junit.runners.Parameterized.Parameter;
import org.junit.runners.Parameterized.Parameters;
import org.openqa.selenium.firefox.FirefoxDriver;
@RunWith(Parameterized.class)
public class BuscaFiltroBairro{
	FirefoxDriver driver =  new FirefoxDriver();
	private DSL dsl;
	private buscaEmpresaPage page;
	@Parameter
	public String estado;
	@Parameter(value=1)
	public String cidade;
	@Parameter(value=2)
	public String bairro;
	@Parameter(value=3)
	public String resultado;
	@Before
	public void inicializa() throws InterruptedException{
		driver.get("https://hmlplat.econodata.com.br/#/login");
		dsl = new DSL(driver);
		page = new buscaEmpresaPage(driver);
		driver.manage().window().maximize();
		dsl.escreveId("plat-login-email","rafael.s.lima92@hotmail.com");
		dsl.escreveId("plat-login-senha","frango");
		dsl.clicId("plat-login-botao-entrar");
		dsl.clicaSidebar("Empresas");
		Thread.sleep(2000);
		page.regiao();
	}
	@After	
	public void finaliza() throws InterruptedException {
			driver.quit();
			Thread.sleep(5000);
			}
	
	@Parameters
	public static Collection<Object[]> getCollection(){
		return Arrays.asList(new Object[][]{
			{"AC-ACRE","RIO BRANCO - AC","Rio Branco - Centro","1.650"},	 					//0
			{"AL-ALAGOAS","MACEIÓ - AL","Maceió - Centro","4.624"},     						//1
			{"AP-AMAPÁ","MACAPÁ - AP","Macapá - Central","3.840"}, 								//2
			{"AM-AMAZONAS","MANAUS - AM","Manaus - Centro","10.470"},							//3
			{"BA-BAHIA","SALVADOR - BA","Salvador - Centro","1.987"},							//4
			{"CE-CEARÁ","FORTALEZA - CE","Fortaleza - Centro","20.507"},						//5
			{"ES-ESPÍRITO SANTO","VITÓRIA - ES","Vitória - Centro","5.538"},					//6
			{"GO-GOIÁS","APARECIDA DE GOIÂNIA - GO","Aparecida Goiânia - Boa Vista","11"},//7
			{"MA-MARANHÃO","SÃO LUÍS - MA","São Luís - Centro","5.091"},						//8
			{"MT-MATO GROSSO","CUIABÁ - MT","Cuiabá - Centro Norte","1.025"},					//9
			{"MS-MATO GROSSO DO SUL","CAMPO GRANDE - MS","Campo Grande - Centro","8.384"},		//10
			{"MG-MINAS GERAIS","BELO HORIZONTE - MG","Belo Horizonte - Centro","23.297"},		//11
			{"PA-PARÁ","BELÉM - PA","Belém - Barreiro","510"},									//12
			{"PB-PARAÍBA","JOÃO PESSOA - PB","João Pessoa - Centro","6.229"},					//13
			{"PR-PARANÁ","CURITIBA - PR","Curitiba - Centro","30.721"},							//14
			{"PE-PERNAMBUCO","RECIFE - PE","Recife -  Aflitos","711"},							//15
			{"PI-PIAUÍ","TERESINA - PI","Teresina - Centro","8.949"},							//16
			{"RJ-RIO DE JANEIRO","RIO DE JANEIRO - RJ","Rio De Janeiro - Centro","65.361"},		//17
			{"RN-RIO GRANDE DO NORTE","NATAL - RN","Natal - Nordeste","544"},					//18
			{"RO-RONDÔNIA","PORTO VELHO - RO","Porto Velho - Centro","2.382"},					//19
			{"RR-RORAIMA","BOA VISTA- RR","Boa Vista - Centro","2.770"},						//20
			{"RS-RIO GRANDE DO SUL","PORTO ALEGRE - RS","Porto Alegre - Centro Histórico","9.606"},//21
			{"SC-SANTA CATARINA","FLORIANÓPOLIS - SC","Florianópolis - Centro","17.469"},		//22
			{"SP-SÃO PAULO","SÃO PAULO - SP","São Paulo - centro","26.613"},					//23
			{"SE-SERGIPE","ARACAJU - SE","Aracaju - Centro","5.812"},							//24
			{"TO-TOCANTINS","PALMAS - TO","Palmas - Centro (Taquaralto)","794"},				//25
		});
	}
		@Test
		public void testeFiltroBairro() throws InterruptedException {
			page.setEstado(estado);
			Thread.sleep(1000);
			page.setCidade(cidade);
			Thread.sleep(1000);
			page.setBairro(bairro);
			Thread.sleep(1000);
			page.atualizarPesquisa();
			Thread.sleep(2000);
			Assert.assertNotEquals(page.resultado(), "0");
			Assert.assertNotEquals(page.resultado(), "19.538.383");
			Assert.assertEquals(page.resultado(), resultado);
		}
		
	}
		

